#include"stdio.h"
struct complex{
	
	int real;
	int imag;

};
struct complex add(int,int,int,int);
struct complex multiply(int*,int*,int*,int*);
main()
{
	int n;
	struct complex z,j,p,q,r;
		
	printf("Enter complex number 1: ");
	scanf("%d %d",&p.real,&p.imag);
	
	printf("Enter complex number 2: ");
	scanf("%d %d",&q.real,&q.imag);

	do{
		printf("\n");
		printf("MENU\n");
		printf("1 to add\n");
		printf("2 to multiply\n");
		printf("0 to exit\n");
		printf("Enter your choice: ");
		scanf("%d",&n);
		printf("\n");
	
		if(n==1)
		{	
			z=add(p.real,p.imag,q.real,q.imag);		
	
			printf("SUM=%d+%di",z.real,z.imag);
			printf("\n");
		}
		if(n==2)
		{
			j=multiply(&p.real,&p.imag,&q.real,&q.imag);		

			printf("Multiplication=%d+%di",j.real,j.imag);
			printf("\n");
		}
	}while(n!=0);
	
}
struct complex add(int a,int b,int c,int d)
{
	struct complex r;
	r.real=a+c;
	r.imag=b+d;
	return r;
}
struct complex multiply(int *a,int *b,int *c,int *d)
{
	struct complex k;
	k.real=*a*(*c);
	k.imag=*b*(*d);
	return k;
}
